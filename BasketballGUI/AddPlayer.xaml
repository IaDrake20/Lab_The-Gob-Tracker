<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasketballGUI.AddPlayer"
             Title="AddPlayer">
    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.RowDefinitions>

            <!--Each creates a row with auto sizing or a height if specified-->
            <RowDefinition />
            <RowDefinition Height="75"/>
            <RowDefinition Height="75" />
            <RowDefinition />
            <RowDefinition Height="25" />
            <RowDefinition />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!--Each created a column with auto sizing or a width if specified-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="250"/>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label
        Grid.Column="1"
        Grid.ColumnSpan="3"
        FontSize="32"
        Text="Please enter a player name:"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Entry x:Name="firstNameEntry"
           Grid.Column="1"
           Grid.Row="1"
           FontSize="20"               
           Grid.ColumnSpan="3"
   Placeholder="First Name" />

        <Entry x:Name="lastNameEntry"
        Grid.Column="1"
        Grid.Row="2"
        FontSize="20"               
        Grid.ColumnSpan="3"
Placeholder="Last Name" />

        <Button Text ="Add player:"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Grid.Row="3"
            FontSize="25"
            x:Name="btnAddPlayer"
                CornerRadius="60"
            Clicked="btnAddPlayer_Clicked"
            
                BackgroundColor="DarkOliveGreen"
TextColor="White"
                Pressed="btnPressed"
            Released="btnReleased"/>

        <Button Text ="Finished"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Grid.Row="5"
            FontSize="25"
                CornerRadius="60"
            x:Name="btnFinish"
            Clicked="btnFinish_Clicked"
            Pressed="btnPressed"
                BackgroundColor="DarkRed"
TextColor="White"
            Released="btnReleased"/>
    </Grid>
</ContentPage>