<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasketballGUI.CreateTeam"
             Title="CreateTeam">
    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.RowDefinitions>

            <!--Each creates a row with auto sizing or a height if specified-->
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Each created a column with auto sizing or a width if specified-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="250"/>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            FontSize="32"
            Text="Please enter a team name:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="entry"
               Grid.Column="1"
               Grid.Row="1"
               FontSize="25"
               Grid.ColumnSpan="3"
       Placeholder="Enter team" />

        <Button Text ="Create Team"
                Grid.Column="2"
                CornerRadius="55"
                Grid.ColumnSpan="1"
                Grid.Row="3"
                FontSize="25"
                BackgroundColor="Green"
TextColor="White"
                x:Name="btnAddTeam"
                Clicked="btnAddTeam_Clicked"
                Pressed="btnPressed"
                Released="btnReleased"/>
    </Grid>
</ContentPage>